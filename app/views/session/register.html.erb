<%= form_tag('/register', method: :post) do %>
  <h3>Register!</h3>
  <div>
    <p>Username:</p>
    <input type='text' name = 'username' />
  </div>
  <div>
    <p>Name:</p>
    <input type='text' name = 'name' />
  </div>
  <div>
    <p>Password:</p>
    <input type='password' name = 'pass' />
  </div>
  <div>
    <p>Confirm Password:</p>
    <input type='password' name = 'cPass' />
  </div>
  <input type='submit' value = 'submit' />

<% end %>